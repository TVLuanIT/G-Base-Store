@model string
@{
    var size = ViewBag.Size?.ToString() ?? "sm";

    var cssSize = size switch
    {
        "lg" => "width:70px;height:70px;font-size:28px;",
        "md" => "width:48px;height:48px;font-size:20px;",
        _ => "width:36px;height:36px;font-size:16px;"
    };
}

<div class="rounded-circle bg-primary text-white d-flex
            align-items-center justify-content-center"
     style="@cssSize">
    @Model
</div>
