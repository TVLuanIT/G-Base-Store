@using GBStore.Extensions
@using System.Security.Claims
@model GBStore.Models.Product

@{
    ViewData["Title"] = "Details";
}
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <!-- Product image -->
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0 img-fluid"
                     src="@Model.GetImagePath()"
                     alt="@Model.Name" />
            </div>

            <!-- Product details -->
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Name</h1>

                <!-- Extra info -->
                <ul class="list-unstyled mb-4">
                    <li><strong>SKU:</strong> @Model.Sku</li>
                    <li><strong>Loại:</strong> @Model.Category.CategoryName</li>
                    @if (!string.IsNullOrWhiteSpace(Model.Series))
                    {
                        <li><strong>Series:</strong> @Model.Series</li>
                    }
                    <li><strong>Thương hiệu:</strong> @Model.Brand.BrandName</li>
                    <li>
                        <strong>Giá:</strong>
                        <span class="fw-bold text-danger">
                            @Model.Price.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) đ
                        </span>
                    </li>
                    @if (!string.IsNullOrWhiteSpace(Model.Scale))
                    {
                        <li><strong>Tỉ lệ:</strong> @Model.Scale</li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Size))
                    {
                        <li><strong>Kích thước:</strong> @Model.Size</li>
                    }
                    <li><strong>Hãng sản xuất:</strong> @Model.Manufacturer</li>
                    @if (!string.IsNullOrWhiteSpace(Model.ProductWeight))
                    {
                        <li><strong>Cân nặng:</strong> @Model.ProductWeight</li>
                    }
                    @if (Model.TagId != null && Model.Tag != null)
                    {
                        <li><strong>Thẻ:</strong> @Model.Tag.TagName</li>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.ProductDescription))
                    {
                        <li>
                            <strong>Mô tả:</strong>
                            <ul class="product-description">
								@foreach (var line in Model.ProductDescription.Split('\n'))
								{
									<li>@line</li>
								}
                            </ul>
                        </li>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Note))
                    {
                        <li><strong>Lưu ý:</strong> @Model.Note</li>
                    }
                </ul>

                <!-- Actions -->
                <div class="d-flex">
                    <input class="form-control text-center me-3"
                           id="inputQuantity"
                           type="number"
                           value="1"
                           min="1"
                           style="max-width: 4rem" />

                    <a id="btnAddToCart"
                       class="btn btn-outline-dark flex-shrink-0"
                       href="#">
                        <i class="bi-cart-fill me-1"></i>
                        Thêm vào giỏ hàng
                    </a>
                </div>
                <script>
                    document.getElementById("btnAddToCart").addEventListener("click", function () {
                        var qty = document.getElementById("inputQuantity").value;
                        var url = '@Url.Action("AddToCart", "ShoppingCarts")' + '?productId=@Model.ProductId&quantity=' + qty;
                        window.location.href = url;
                    });
                </script>
            </div>
        </div>
    </div>

    <br />

    @{
        var reviews = Model.Reviews ?? new List<Review>();

        decimal avgRating = reviews.Any()
            ? reviews.Average(r => r.Rating)
            : 0m;
    }

    <div class="container mt-4">
        <div class="row">
            <!-- Cột thống kê + rating breakdown (giữ nguyên) -->
            <div class="col-md-4">
                <!-- Avg score -->
                <div class="avg-score text-center mb-3">
                    <div class="avg-value mb-2">
                        <h2 class="mb-0">
                            @avgRating.ToString("0.0")
                        </h2>
                        <small>Đánh giá trung bình</small>
                    </div>
                    <div class="avg-stars" style="color:#ffca08; font-size:1.8rem;">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor((double)avgRating))
                            {
                                <span>&#9733;</span>   <!-- full star -->
                            }
                            else if (i - avgRating <= 0.5m)
                            {
                                <span>&#9734;</span>   <!-- half star -->
                            }
                            else
                            {
                                <span style="color:lightgray">&#9733;</span> <!-- empty star -->
                            }
                        }
                    </div>
                </div>

                <!-- Rating breakdown -->
                <div class="rating-breakdown mb-3 text-start">
                    @for (int star = 5; star >= 1; star--)
                    {
                        var count = reviews.Count(r => r.Rating == star);
                        var total = reviews.Count();
                        var percent = total > 0 ? (count * 100.0 / total) : 0;

                        <div class="d-flex align-items-center mb-1">
                            <span class="me-2" style="width:20px;">@star</span>
                            <span class="me-2">&#9733;</span>

                            <div class="progress flex-grow-1 me-2" style="height:12px;">
                                <div class="progress-bar" role="progressbar"
                                     style=@($"width:{percent}%")
                                     aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>

                            <span class="rating-count flex-shrink-0" style="white-space:nowrap;">
                                @percent% | @count đánh giá
                            </span>
                        </div>
                    }
                </div>

                <!-- Button -->
                <div class="text-center">
                    <button type="button" id="btnOpenReview" class="btn btn-primary w-100"
                            data-user-auth="@(User.Identity?.IsAuthenticated ?? false)">
                        Đánh Giá Ngay
                    </button>
                </div>
            </div>


            <!-- Cột đánh giá (review list) -->
            <div class="col-md-8">
                <h4>Đánh giá sản phẩm</h4>

                @if (Model.Reviews?.Any() == true)
                {
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="review-card mb-3 p-3 border rounded position-relative">
                            <div class="d-flex justify-content-between align-items-start mb-1">
                                <div>
                                    <strong>@review.Customer.UserName</strong>
                                    <span>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <span style="color:#ffca08">&#9733;</span>
                                            }
                                            else
                                            {
                                                <span style="color:lightgray">&#9733;</span>
                                            }
                                        }
                                    </span>
                                </div>

                                @* Chỉ hiển thị menu 3 chấm nếu là chủ review *@
                                @if (User?.Identity?.IsAuthenticated == true 
                                     && review.CustomerId != null 
                                     && review.CustomerId == User.FindFirst(ClaimTypes.NameIdentifier)?.Value)
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light dropdown-toggle" type="button"
                                                id="reviewMenu@review.ReviewId" data-bs-toggle="dropdown" aria-expanded="false">
                                            &#x22EE; @* ký hiệu 3 chấm dọc *@
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="reviewMenu@review.ReviewId">
                                            <li>
                                                <a class="dropdown-item" asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.ReviewId">Chỉnh sửa</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.ReviewId">Xóa</a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                            </div>

                            <p class="mb-1">@review.Comment</p>
                            <small class="text-muted">@($"({review.Rating}/5 sao) - {review.CreatedDate:dd/MM/yyyy}")</small>
                        </div>
                    }
                }
                else
                {
                    <p style="text-align:left; color:#666; font-style:italic; margin-top:20px;">
                        Chưa có đánh giá nào cho sản phẩm này.
                    </p>
                }
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <!-- modal-lg = to hơn -->
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reviewModalLabel">Gửi đánh giá của bạn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Reviews" asp-action="AddCustomerReview" method="post" id="reviewForm">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <input type="hidden" name="rating" id="ratingValue" value="0" />
                        
                        <!-- Container label + stars -->
                        <div style="display:flex; flex-direction: column; margin-bottom:20px;">
                            <!-- Label bên trên -->
                            <label style="margin-bottom:10px;">
                                Bạn cảm thấy thế nào về sản phẩm nhỉ?
                            </label>

                            <!-- Star rating + text dưới sao -->
                            <div id="starRatingContainer">
                                <div id="starRating">
                                    <span data-value="1" class="star">&#9733;</span>
                                    <span data-value="2" class="star">&#9733;</span>
                                    <span data-value="3" class="star">&#9733;</span>
                                    <span data-value="4" class="star">&#9733;</span>
                                    <span data-value="5" class="star">&#9733;</span>
                                </div>
                                <div id="starLabels">
                                    <span>Rất tệ</span>
                                    <span>Không tệ</span>
                                    <span>Trung bình</span>
                                    <span>Tốt</span>
                                    <span>Tuyệt vời</span>
                                </div>
                            </div>
                        </div>

                        <textarea name="comment" class="form-control mt-2" placeholder="Viết nhận xét..." rows="4"></textarea>
                        <button type="submit" class="btn btn-primary mt-3">Gửi đánh giá</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>

<script>
    document.getElementById("btnOpenReview").addEventListener("click", function() {
        const isAuth = this.getAttribute("data-user-auth") === "True";
        if (!isAuth) {
            // Redirect đến login nếu chưa login
            window.location.href = "/Identity/Account/Login?returnUrl=" + encodeURIComponent(window.location.pathname);
        } else {
            // Mở modal nếu đã login
            const reviewModal = new bootstrap.Modal(document.getElementById('reviewModal'));
            reviewModal.show();
        }
    });
</script>