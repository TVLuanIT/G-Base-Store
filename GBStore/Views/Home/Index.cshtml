@model IEnumerable<GBStore.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <a asp-action="Details" asp-route-id="@item.ProductId">
                            <div class="product-img-wrapper">
                                <img class="card-img-top" src="@item.Picture" alt="@item.Name" />
                            </div>
						</a>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">@item.Category.CategoryName</h5>
                                <!-- Product price-->
								<span class="fw-bold text-danger">
                                    @item.Price.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ₫
                                </span>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <!-- Product name-->
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="product-name">@item.Name</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
