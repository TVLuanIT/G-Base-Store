@model IEnumerable<GBStore.Models.Order>

@{
    ViewBag.Title = "Đơn hàng của tôi";
}

<h2>Đơn hàng của tôi</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@(order.OrderDate.HasValue? order.OrderDate.Value.ToString("dd/MM/yyyy") : "")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a asp-controller="OrderDetails" asp-action="Index" asp-route-id="@order.OrderId" class="btn btn-primary btn-sm">
                        Xem chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
