@model GBStore.Models.Order

<section class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="text-success">Đặt hàng thành công!</h1>
            <p>Cảm ơn bạn đã mua sắm tại GBStore.</p>
            <p>Mã đơn hàng của bạn: <strong>@Model.OrderId</strong></p>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5>Thông tin đơn hàng</h5>
            </div>
            <div class="card-body">
                <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
                <p><strong>Số điện thoại:</strong> @Model.Phone</p>
                <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
                <p><strong>Ghi chú:</strong> @Model.Note</p>
                <p><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("N0") ₫</p>
                <p><strong>Trạng thái:</strong> @Model.OrderStatus</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Chi tiết sản phẩm</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Price.ToString("N0") ₫</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Quantity* item.Price).ToString("N0") ₫</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                Tiếp tục mua sắm
            </a>
            <a asp-controller="Orders" asp-action="MyOrders" class="btn btn-outline-secondary btn-lg">
                Xem đơn hàng của tôi
            </a>
        </div>
    </div>
</section>
