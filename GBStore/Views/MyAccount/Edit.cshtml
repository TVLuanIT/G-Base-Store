@model GBStore.Models.Customer

@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">

                    <!-- Header -->
                    <div class="mb-4 text-center">
                        <h3 class="fw-bold mb-1">✏️ Chỉnh sửa thông tin</h3>
                        <p class="text-muted mb-0">
                            Cập nhật thông tin cá nhân của bạn
                        </p>
                    </div>

                    <form asp-action="Edit" method="post">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">
                                Họ và tên
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                Email
                            </label>
                            <input asp-for="Email" class="form-control" readonly />
                            <small class="text-muted">
                                Email không thể thay đổi
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">
                                Số điện thoại
                            </label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CustomerAddress" class="form-label fw-semibold">
                                Địa chỉ
                            </label>
                            <input asp-for="CustomerAddress" class="form-control" />
                            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle me-1"></i>
                                Lưu thay đổi
                            </button>

                            <a asp-action="Index"
                               asp-controller="MyAccount"
                               class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i>
                                Quay lại
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
