@model GBStore.Models.Review
@{
    ViewData["Title"] = "Xóa đánh giá";
}

<h2>Xóa đánh giá</h2>

<div class="alert alert-warning">
    Bạn có chắc muốn xóa đánh giá này?
</div>

<dl class="row">
    <dt class="col-sm-2">Sản phẩm</dt>
    <dd class="col-sm-10">@Model.Product.Name</dd>

    <dt class="col-sm-2">Đánh giá</dt>
    <dd class="col-sm-10">@Model.Rating / 5 sao</dd>

    <dt class="col-sm-2">Nhận xét</dt>
    <dd class="col-sm-10">@Model.Comment</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ReviewId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Hủy</a>
</form>
