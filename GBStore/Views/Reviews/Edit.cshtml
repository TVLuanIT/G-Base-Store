@model GBStore.Models.Review
@{
    ViewData["Title"] = "Chỉnh sửa đánh giá";
}

<h2>Chỉnh sửa đánh giá</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ReviewId" />
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-3">
        <label>Đánh giá</label>
        <select asp-for="Rating" class="form-control">
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i" selected="@(i == Model.Rating ? "selected" : null)">@i sao</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Nhận xét</label>
        <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Hủy</a>
</form>
